def make_positive(number):
    if number < 0:
# if the number is less than 0 it is negative.
        result = number * -1 
# Multiply the negative by -1 to make it positive.
    else:
        result = number
# This is for numbers that are greater than 0
# or postive so no change required. 
    return result


print(make_positive(-4))   # Should print 4
print(make_positive(0))    # Should print 0
print(make_positive(-.25)) # Should print 0.25
print(make_positive(5))    # Should print 5